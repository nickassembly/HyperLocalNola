
@{
    ViewBag.Title = "HyperLocalNola";
}
<!-- DONT FORGET to CTRL + F5 when looking at style changes to clear the browser cache-->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class=" active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">

        <div class="carousel-item item active" style="background-image: url('./images/levee.jpg')">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="display-4">Go Local</h3>
                <p class="lead">Get the best local products and services.</p>
            </div>
        </div>

        <div class="carousel-item item" style="background-image: url('./images/sunsetNola.jpg')">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="display-4">Discover Local</h3>
                <p class="lead">Go where the locals go by exploring local businesses</p>
            </div>
        </div>

        <div class="carousel-item item" style="background-image: url('./images/sunset2Nola.jpg')">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="display-4">Enjoy Local</h3>
                <p class="lead">Enjoy the best local music, food and products, delivered right to your door.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<section class="py-5">
    <div class="container">
        <h1 class="display-4">HyperLocal New Orleans</h1>
        <p class="lead">
            Immerse yourself in the great food and culture that the city of New Orleans has to offer.
            HyperLocalNola brings you right to the street level of the most interesting place around.
            View all the great areas of interest all around one of the most amazing places on earth,
            All without leaving your house!
        </p>
        <h2 class="">  Get Hyper Local </h2>
    </div>
</section>


